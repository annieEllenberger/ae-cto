---
import Container from "@components/container.astro";
import Logo from "@assets/logo.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";

const menuitems = [
  {
    title: "Who I Work With",
    path: "#who-i-work-with",
  },
  {
    title: "Problems I Solve",
    path: "#services",
  },
  {
    title: "How I Work",
    path: "#how-i-work",
  },
  {
    title: "Engagement Options",
    path: "#engagement-options",
  },
  {
    title: "Testimonials",
    path: "#testimonials",
  },
  {
    title: "Contact",
    path: "#contact",
  },
];
---

<Container>
  <header class="flex flex-col lg:flex-row justify-between items-center my-5">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a href={import.meta.env.BASE_URL} class="hover:opacity-80 transition-opacity">
          <Logo />
        </a>
        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4 text-gray-800" />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-3">
          {
            menuitems.map((item) => (
              <li>
                <a
                  href={item.path}
                  class="flex lg:px-3 py-2 items-center text-gray-600 hover:text-primary transition-colors">
                  <span>{item.title}</span>
                </a>
              </li>
            ))
          }
        </ul>
      </MenuItems>
    </Astronav>
      <div>
      <div class="hidden lg:flex items-center gap-4">
        <a href="#contact" class="px-5 py-2.5 bg-primary text-white rounded-md hover:bg-primary-hover transition-colors font-medium">
          Let's Talk
        </a>
      </div>
    </div>
  </header>
</Container>